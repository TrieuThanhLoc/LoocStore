    <div class="form-nhap_hang">
        <h6 class="ten_muc">
            Giao tiếp và kết nối
            </h5>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" value="{{giaotiepvaketnoi.baomat}}" placeholder="Bảo mật" name="baomat">
