                    <input type="text" class="form-control" value="{{trongluongvathietke.mausac}}" placeholder="Màu sắc" name="mausac">
                </div>
            </div>
    </div>
    <div class="form-nhap_hang">
        <h6 class="ten_muc">
            Bộ xử lý
            </h5>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" value="{{boxuly.cpu}}" placeholder="CPU" name="cpu">
                </div>
                <div class="col">
                    <input type="text" class="form-control" value="{{boxuly.loaicpu}}" placeholder="Loại CPU" name="loaicpu">
                </div>
                <div class="col">
                    <input type="text" class="form-control" value="{{boxuly.sonhan}}" placeholder="Số nhân" name="sonhan">
                </div>
            </div>
    </div>
    <div class="form-nhap_hang">
        <h6 class="ten_muc">
            Màn hình
            </h5>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" value="{{manhinh.tyledientichmanhinh}}" placeholder="Tỷ lệ diện tích màn hình"
                        name="tyledientichmanhinh">
                </div>
                <div class="col">
                    <input type="text" class="form-control" value="{{manhinh.kichthuocmanhinh}}" placeholder="Kích thước màn hình" name="kichthuocmanhinh">
                </div>
