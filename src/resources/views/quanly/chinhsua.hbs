                <div class="col">
                    <input type="text" class="form-control" value="{{luutru.thenhongoai}}" placeholder="Thẻ nhớ ngoài" name="thenhongoai">
                </div>
            </div>
    </div>
    <div class="form-nhap_hang">
        <h6 class="ten_muc">
            Camera
            </h5>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" value="{{camera.camgocrong}}" placeholder="Camera góc rộng" name="camgocrong">
                </div>
                <div class="col">
                    <input type="text" class="form-control" value="{{camera.camgocsieurong}}" placeholder="Camera góc siêu rộng" name="camgocsieurong">
