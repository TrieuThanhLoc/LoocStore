<form method="POST" action="../../quanly/{{sanpham.masp}}/capnhathang?_method=PUT">
    <div class="form-nhap_hang">
        <h6 class="ten_muc">
            Thông tin cơ bản
            </h5>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" value="{{sanpham.tensp}}" placeholder="Tên sản phẩm" id="tensp" name="tensp"
