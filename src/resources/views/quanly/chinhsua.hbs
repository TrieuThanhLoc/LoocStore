                <div class="col">
                    <input type="text" class="form-control" value="{{giaotiepvaketnoi.wifi}}" placeholder="Wifi" name="wifi">
                </div>
                <div class="col">
                    <input type="text" class="form-control" value="{{giaotiepvaketnoi.gps}}" placeholder="GPS" name="gps">
