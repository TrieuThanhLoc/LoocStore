                <div class="col">
                    <input type="text" class="form-control" value="{{manhinh.tansoquet}}" placeholder="Tần số quét" name="tansoquet">
                </div>
                <div class="col">
                    <input type="text" class="form-control" value="{{manhinh.kichthuocmanhinhphu}}" placeholder="kích thước màn hình phụ (nếu có)"
                        name="kichthuocmanhinhphu">
                </div>
            </div>
    </div>
    <div class="form-nhap_hang">
        <h6 class="ten_muc">
            Lưu trữ
            </h5>
            <div class="row">
                <div class="col">
